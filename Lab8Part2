#include <Arduino.h>

// Pin Definitions
#define BTN 27           // Button pin
#define LED_PIN 13       // LED pin
#define SPK 25           // Speaker pin
#define POT_PIN 34       // Potentiometer pin (analog input)

// Constants
const int threshold = 500; // Threshold for the "distance sensor" (analog reading)
const int freq = 5000;     // Speaker frequency
const int pwmChannel = 0;  // PWM channel
const int resolution = 8;  // PWM resolution

// Variables
volatile bool buttonPressed = false; // Interrupt flag
int state = 0;                       // 0: Unarmed, 1: Armed, 2: Alarming

// Interrupt Service Routine
void IRAM_ATTR isr() {
  buttonPressed = true;
}

// Function Prototypes
void sound_on();
void sound_off();
void led_on();
void led_off();

void setup() {
  // Pin setup
  pinMode(BTN, INPUT_PULLUP);
  pinMode(LED_PIN, OUTPUT);
  attachInterrupt(BTN, isr, FALLING);

  // PWM setup
  ledcSetup(pwmChannel, freq, resolution);
  ledcAttachPin(SPK, pwmChannel);

  // Initial states
  led_off();
  sound_off();
}

void loop() {
  // Read the analog value from the potentiometer
  int distance = analogRead(POT_PIN);

  // State machine
  switch (state) {
    case 0: // Unarmed State
      if (buttonPressed) {
        buttonPressed = false;
        led_on();
        state = 1; // Transition to Armed State
      }
      break;

    case 1: // Armed State
      if (distance < threshold) {
        sound_on();
        state = 2; // Transition to Alarming State
      } else if (buttonPressed) {
        buttonPressed = false;
        led_off();
        state = 0; // Transition to Unarmed State
      }
      break;

    case 2: // Alarming State
      if (distance >= threshold) {
        sound_off();
        state = 1; // Transition to Armed State
      } else if (buttonPressed) {
        buttonPressed = false;
        led_off();
        sound_off();
        state = 0; // Transition to Unarmed State
      }
      break;
  }
}

// Function Definitions
void sound_on() {
  ledcWriteTone(pwmChannel, 1000); // Turn on sound
}

void sound_off() {
  ledcWriteTone(pwmChannel, 0); // Turn off sound
}

void led_on() {
  digitalWrite(LED_PIN, HIGH); // Turn on LED
}

void led_off() {
  digitalWrite(LED_PIN, LOW); // Turn off LED
}
